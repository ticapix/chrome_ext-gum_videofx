{
    "manifest_version": 2,
    "name": "ORTC/WebRTC video effect",
    "short_name": "webfx",
    "description": "This extension apply video effects on the video from the camera",
    "version": "1.0",
    "browser_action": {
        "default_icon": "res/icon.png",
        "default_popup": "popup.html",
        "default_title": "Video effect!"
    },
    "background": {
        "scripts": ["js/util.js", "js/background.js"]
    },
    "content_scripts": [{
        "run_at": "document_start",
        "js": ["js/util.js", "js/util_inject.js", "js/main.js"],
        "matches": ["*://*/*"]
    }],
    "web_accessible_resources": ["lib/three.min.js", "js/util.js", "js/app.js"]
}